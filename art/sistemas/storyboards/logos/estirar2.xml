<?xml version="1.0" encoding="UTF-8"?>
<theme>
<formatVersion>7</formatVersion>
<view name="system">

<image name="logo">
<storyboard event="activate">
<animation property="x" to="0.2" begin="0" duration="300" autoreverse="true" mode="EaseIn"/>
<animation property="opacity" from="0" to="1" duration="150" mode="Linear"/>
<animation property="opacity" from="1" to="1" begin="1150" duration="35" mode="Linear"/>
</storyboard>

<storyboard event="scroll">
<animation property="h" to="0.01" duration="550" begin="800" autoreverse="true" repeat="1"/>
<animation property="w" to="0.21" duration="550" begin="800" autoreverse="true" repeat="1"/>
<animation property="opacity" from="0" to="1" duration="150" mode="Linear"/>
<animation property="opacity" from="1" to="1" begin="1150" duration="35" mode="Linear"/>
</storyboard>

<storyboard event="deactivate">
<animation property="h" to="0.01" duration="350" begin="200" autoreverse="true" repeat="1"/>
<animation property="w" to="0.21" duration="350" begin="200" autoreverse="true" repeat="1"/>
<animation property="opacity" from="0" to="1" duration="150" mode="Linear"/>
<animation property="opacity" from="1" to="1" begin="1150" duration="35" mode="Linear"/>
</storyboard>
</image>


<text name="logoText">
<fontPath>./art/sistemas/fuentes/bestfriends.ttf</fontPath>
<color>${baseColor}</color>
<forceUppercase>true</forceUppercase>
<storyboard event="activate">
<animation property="x" to="0.2" begin="0" duration="300" autoreverse="true" mode="EaseIn"/>
<animation property="opacity" from="0" to="1" duration="150" mode="Linear"/>
<animation property="opacity" from="1" to="1" begin="1150" duration="35" mode="Linear"/>
</storyboard>

<storyboard event="scroll">
<animation property="h" to="0.01" duration="550" begin="800" autoreverse="true" repeat="1"/>
<animation property="w" to="0.21" duration="550" begin="800" autoreverse="true" repeat="1"/>
<animation property="opacity" from="0" to="1" duration="150" mode="Linear"/>
<animation property="opacity" from="1" to="1" begin="1150" duration="35" mode="Linear"/>
</storyboard>

<storyboard event="deactivate">
<animation property="h" to="0.01" duration="350" begin="200" autoreverse="true" repeat="1"/>
<animation property="w" to="0.21" duration="350" begin="200" autoreverse="true" repeat="1"/>
<animation property="opacity" from="0" to="1" duration="150" mode="Linear"/>
<animation property="opacity" from="1" to="1" begin="1150" duration="35" mode="Linear"/>
</storyboard>
</text>
</view>
</theme>

